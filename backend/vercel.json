{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "prisma/schema.prisma",
          "prisma/migrations/**",
          "src/config/**",
          "src/routes/**",
          "src/middleware/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/dist/index.js" }
  ]
}